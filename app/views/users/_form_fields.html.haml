.form-group{ :class => form_group_class(author, :first_name) }
  =f.label :first_name, class: 'control-label'
  =f.text_field :first_name, class: 'form-control', required: true, autofocus: true
  =help_blocks author, :first_name
.form-group{ :class => form_group_class(author, :last_name) }
  =f.label :last_name, class: 'control-label'
  =f.text_field :last_name, class: 'form-control', :required => true
  =help_blocks author, :last_name
.form-group{ :class => form_group_class(author, :phone_number) }
  =f.label :phone_number, class: 'control-label'
  =f.telephone_field :phone_number, class: 'form-control'
  =help_blocks author, :phone_number
.checkbox
  =f.label :contactable do
    =f.check_box :contactable
    It is OK if my advisor contacts me by phone
.form-group{ :class => form_group_class(author, :topic) }
  =f.label :topic, 'What interests you most about Crowdscribed?', class: 'control-label'
  =f.text_area :topic, class: 'form-control'
  =help_blocks author, :package_id
.form-group{ :class => form_group_class(author, :username) }
  =f.label :username, class: 'control-label'
  =f.text_field :username, class: 'form-control'
  =help_blocks author, :username
